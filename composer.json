{
  "name": "gglnx/extract-craft-translations",
  "description": "Extract translations from Craft CMS files (php, twig and js)",
  "type": "project",
  "license": "MIT",
  "authors": [
    {
      "name": "Dennis Morhardt",
      "email": "info@dennismorhardt.de"
    }
  ],
  "bin": [
    "bin/extract-craft-translations"
  ],
  "autoload": {
    "psr-4": {
      "gglnx\\ExtractCraftTranslations\\": "src/"
    }
  },
  "require": {
    "gettext/gettext": "^5.7",
    "mck89/peast": "dev-master",
    "mnapoli/silly": "^1.8",
    "nikic/php-parser": "^4.18",
    "symfony/filesystem": "^7.0",
    "symfony/finder": "^7.0"
  },
  "require-dev": {
    "phpstan/phpstan": "*",
    "dealerdirect/phpcodesniffer-composer-installer": "^1.0",
    "sirbrillig/phpcs-variable-analysis": "^2.11",
    "slevomat/coding-standard": "*",
    "squizlabs/php_codesniffer": "*"
  },
  "config": {
    "sort-packages": true,
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2"
    },
    "allow-plugins": {
      "dealerdirect/phpcodesniffer-composer-installer": true
    }
  }
}
